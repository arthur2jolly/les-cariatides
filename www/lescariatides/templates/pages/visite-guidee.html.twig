{% block content %}
    <div id="central">
        <div style="margin-left:34px; margin-right:34px">
            <h2 id="tt_visite">Les Cariatides, l’invitation au Voyage</h2>
            <div id="wifi">Accès WIFI</div>
            <div class="sep"></sep>
                <div id="contenu_visite">
